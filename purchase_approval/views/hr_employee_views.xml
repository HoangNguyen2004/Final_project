<odoo>
    <!-- HR Employee Form View -->
    <record id="view_employee_form_inherit_approval" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.approval</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Quyền phê duyệt" name="approval_rights">
                    <group>
                        <field name="is_approval"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
